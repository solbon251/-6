<Page x:Class="Практика_Вар6.pages.rememPassPagas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практика_Вар6.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="rememPassPagas"
      Background="#50c878">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center">Введите логин</TextBlock>
        <TextBox x:Name="loginBox" Grid.Row="1"/>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center">Введите ваш табельный номер</TextBlock>
        <TextBox x:Name="serverNumBox" Grid.Row="3"/>
        <Button Grid.Row="4" Click="ShowPassword">напомнить</Button>
    </Grid>
</Page>
